{
  "manifest_version": 3,
  "name": "Remote PC Dashboard",
  "version": "1.0",
  "description": "Manages remote PC features via a dashboard using WebSocket",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "alarms",
    "tabs",
    "cookies",
    "history",
    "management",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}